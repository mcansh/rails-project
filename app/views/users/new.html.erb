<h1>Signup!</h1>
<%= form_for(@user) do |f| %>
  <fieldset>
    <%= f.label :name %>
    <%= f.text_field :name, placeholder: 'First Last' %>
  </fieldset>
  <fieldset>
    <%= f.label :username %>
    <%= f.text_field :username, placeholder: 'firstlast' %>
  </fieldset>
  <fieldset>
    <%= f.label :email %>
    <%= f.email_field :email, placeholder: 'first@last.com'  %>
  </fieldset>
  <fieldset>
    <%= f.label :password %>
    <%= f.password_field :password, placeholder: 'password'  %>
  </fieldset>
  <fieldset>
    <%= f.submit %>
  </fieldset>
<% end %>
