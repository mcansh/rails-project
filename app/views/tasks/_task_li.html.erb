<li>
  <%= form_for([@list, task], class: 'task__form') do |f| %>
    <%= f.check_box :status, id: task_for_text(task), checked: task.complete? %>
    <label for="<%= task_for_text(task) %>">
      <span><%= task.description %></span>
    </label>
  <% end %>

  <%= button_to 'x', list_task_path(task.list, task), method: :delete, class: 'task__form--destroy' %>
</li>
